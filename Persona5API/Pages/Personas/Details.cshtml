@page
@using Persona5API.Models;
@using Newtonsoft.Json;
@model Persona5API.Pages.Personas.DetailsModel

@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";

	
}

<h1>Details</h1>

<div>
	<h4>Persona</h4>
	<hr />
	<h3>Skills</h3>
	<table class="table">
		<tr>
			<th>
				Type
			</th>
			<th>
				Name
			</th>
			<th>
				Effect
			</th>
			<th>
				Power
			</th>
			<th>
				Cost
			</th>
		</tr>
		@foreach (var skill in Model.Persona.Skills)
		{
			<tr>
				<td>
					@skill.ElementName
				</td>
				<td>
					<a>@skill.SkillName</a>
				</td>
				<td>
					@skill.Effect
				</td>
				<td>
					@skill.Power
				</td>
				@if (!string.IsNullOrEmpty(skill.CostAmount))
				{
					<td>@skill.CostAmount</td>
				}
				else
				{
					<td>-</td>
				}
			</tr>

		}
	</table>
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Persona.Name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Persona.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Persona.Level)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Persona.Level)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Persona.Arcana)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Persona.Arcana)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Persona.Description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Persona.Description)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Persona.SkillsJson)
		</dt>
		
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Persona.ResistJson)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Persona.ResistJson)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Persona.WeakJson)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Persona.WeakJson)
		</dd>
	</dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Persona.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
